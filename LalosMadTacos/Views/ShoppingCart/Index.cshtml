@model LalosMadTacos.Models.ShoppingCart

@{
    ViewData["Title"] = "Index";
}

<h1>My Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                Item
            </th>
            <th>
                Price
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
            </tr>
        }
    </tbody>
</table>
